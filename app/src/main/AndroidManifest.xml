<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookapp03"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookapp03"
        tools:targetApi="31">

        <!-- ここが必須 -->
        <activity
            android:name=".C1UIProcessing.DisplayHome"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 他の画面も忘れずに -->
        <activity
            android:name=".C1UIProcessing.DisplaySummary"
            android:exported="false"/>
        <activity
            android:name=".C1UIProcessing.DisplayHighlightMemo"
            android:exported="false"/>
        <activity
            android:name=".C1UIProcessing.DisplaySetting"
            android:exported="false"/>

    </application>
</manifest>