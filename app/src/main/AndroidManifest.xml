<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bookapp03">   <!-- ← 追加 -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookapp03"
        tools:targetApi="31">

        <!-- ランチャー用 Activity -->
        <activity
            android:name=".ui.BookListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2 ペイン目などのエントリポイント -->
        <activity
            android:name=".ui.BookDetailActivity"
            android:exported="false" />

        <!-- C1UIProcessing 以下の Activities -->
        <activity
            android:name="com.example.bookapp03.C1UIProcessing.DisplaySummary"
            android:exported="false"
            android:label="要約表示" />
        <activity
            android:name="com.example.bookapp03.C1UIProcessing.DisplayHighlightMemo"
            android:exported="false"
            android:label="ハイライトメモ表示" />
        <activity
            android:name="com.example.bookapp03.C1UIProcessing.DisplaySetting"
            android:exported="false"
            android:label="設定" />

    </application>
</manifest>