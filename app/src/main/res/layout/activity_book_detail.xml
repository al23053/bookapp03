<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" tools:context=".C1UIProcessing.BookDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:paddingTop="?attr/actionBarSize" android:paddingBottom="140dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/no_book_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本の情報がありません"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/book_cover"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:contentDescription="本の表紙"/>

            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="タイトル"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <TextView
                android:id="@+id/book_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="公開ステータス"
                android:textSize="14sp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/book_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全体まとめ"
                android:paddingTop="12dp"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_sheet_memo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?android:attr/colorBackground"
        android:elevation="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="120dp"
        android:layout_gravity="bottom">

        <include layout="@layout/bottom_sheet_highlight_memo" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="戻る"
        android:padding="16dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="0dp" /> </androidx.coordinatorlayout.widget.CoordinatorLayout>