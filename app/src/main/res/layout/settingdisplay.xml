<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/background_light">

    <!-- ヘッダー -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="戻る" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ユーザ設定"
            android:textSize="34sp"
            android:layout_marginStart="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 各設定項目 -->
    <TextView
        android:id="@+id/btnNicknameIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ニックネーム・アイコン"
        android:textSize="24sp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="好きな本のジャンル"
        android:textSize="24sp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ダークモード切替"
        android:textSize="24sp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnAccountSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="アカウント切替"
        android:textSize="24sp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ログアウト"
        android:textSize="24sp"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />
</LinearLayout>
