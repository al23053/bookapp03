<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="好きなジャンルを選んでください"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkbox_mystery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ミステリー" />

        <CheckBox
            android:id="@+id/checkbox_horror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ホラー" />

        <CheckBox
            android:id="@+id/checkbox_biography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="伝記" />

        <CheckBox
            android:id="@+id/checkbox_selfhelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自己啓発" />

        <CheckBox
            android:id="@+id/checkbox_romance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恋愛" />

        <CheckBox
            android:id="@+id/checkbox_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歴史" />

        <CheckBox
            android:id="@+id/checkbox_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ビジネス" />

        <CheckBox
            android:id="@+id/checkbox_scifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SF" />

        <CheckBox
            android:id="@+id/checkbox_fantasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ファンタジー" />

        <CheckBox
            android:id="@+id/checkbox_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="コンピュータ・IT" />

        <!-- 必要に応じてジャンルを追加 -->

        <Button
            android:id="@+id/buttonNextToComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="次へ" />
    </LinearLayout>
</ScrollView>
